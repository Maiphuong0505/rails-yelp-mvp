<div class="container mt-3">
  <h3><%= @restaurant.name %></h3>
  <div class="my-3">
    <h6>❓ <%= @restaurant.category.capitalize %></h6>
    <p class="mb-0">🏡 <%= @restaurant.address %></p>
    <p class="mb-0">☎️ <%= @restaurant.phone_number %></p>
  </div>
  <%= link_to "See restaurants list", restaurants_path, class: "btn btn-success" %>
  <%= link_to "Write a review", new_restaurant_review_path(@restaurant), class: "btn btn-warning" %>
    <%= link_to "See all reviews", restaurant_reviews_path(@restaurant), class: "btn btn-info" %>
</div>
